import chords
import tablature

Program:
	header=SongHeader
	imports=SoundFontImport
	sequences*=SongSequence
	segments*=TimelineSegment
	timeline=Timeline
;

SongHeader:
"["
	"Name" name=STRING
	"Author" author=STRING
	"Beat" beatup=INT "/" beatdown=INT
	"Tempo" tempo=INT
"]"
;

SoundFontImport:
	"import" soundfonts*=SoundFont
;

SoundFont:
	name=ID path=STRING
;

SongSequence:
	"sequence" type=InstrumentType name=ID 
	"{"
	
	value=SourceType 
	
	"}"
;

InstrumentType:
	"guitar-solo"|"guitar-rhythm"|"drums"|"keyboards"|"bass"|"electro"
;

SourceType:
	Tablature|GuitarChords
;

TimelineSegment:
	"segment" name=ID "{" instrument=[SongSequence] ":" soundfont=[SoundFont] "}"
;

Timeline:
	"timeline" "{" tracks*=TimelinePart "}"
;

TimelinePart:
	name=STRING ":" sequence+=[SongSequence][","]
;

Comment:
  /\/\/.*$/
;